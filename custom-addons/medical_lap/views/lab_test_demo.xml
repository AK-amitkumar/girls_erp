<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="medical_view_report_document_lab">
			<t t-call="report.external_layout">
				<div class="page">
					<div class="oe_structure"/>
					<div class="row">
						<div>
							<h3 class="text-center mb32">
								<strong>LABORATORY TESTS</strong>
							</h3>
						</div>
					</div>
					<br/>
					<div class="row mt32 mb32" id="informations">
						<div class="col-xs-3">
							<strong>Patient Name:</strong>
							<p t-field="doc.name"/>
						</div>
						<div class="col-xs-3">
							<strong>Patient ID:</strong>
							<p t-field="doc.patient"/>
						</div>
						<div class="col-xs-3">
							<strong>Age:</strong>
							<p t-field="doc.patient.age"/>
						</div>
						<div class="col-xs-3">
							<strong>Sex:</strong>
							<p t-field="doc.patient.sex"/>
						</div>
					</div>
					<br>
						<br>
							<br></br>
						</br>
					</br>
					<div>
						<table class="table table-condensed">
							<thead>
								<tr>
									<th>Test Type</th>
									<th>Doctor Name</th>
									<th>Date</th>
									<th>State</th>
								</tr>
							</thead>
							<tbody class="sale_tbody">
								<t t-foreach="doc.lab_request" t-as="test">
									<tr>
										<td>
											<span t-field="test.name"/>
										</td>
										<td>
											<span t-field="test.doctor_id"/>
										</td>
										<td>
											<span t-field="test.date"/>
										</td>
										<td>
											<span t-field="test.state"/>
										</td>
									</tr>
								</t>
							</tbody>
						</table>
					</div>
					<div class="oe_structure"/>
				</div>
			</t>
		</template>
		<template id="lab_test_demo">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-call="pragtech_medical_pathology.medical_view_report_document_lab" t-lang="doc.patient.name.lang"/>
				</t>
			</t>
		</template>
	</data>
</openerp>
