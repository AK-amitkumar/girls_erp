		<record id="view_medical_lab_test_filter" model="ir.ui.view">
			<field name="name">Lab Tests Requests</field>
			<field name="model">medical.patient.lab.test</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Search Lab Tests Requests">

					<separator orientation="vertical"/>
					<field name="name" select="1"/>
					<field name="date" select="1"/>
					<field name="patient_id" select="1"/>
					<field name="doctor_id" select="1"/>
					<field name="state" select="1"/>
					<newline/>

				</search>
			</field>
		</record>

		<!-- Patient details -->
		<record model="ir.ui.view" id="medical_patient_view_lab_test">
			<field name="name">Patient Lab Test</field>
			<field name="model">medical.patient</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="medical_patient_view"/>
			<field name="arch" type="xml">
				<notebook position="inside">
					<page string="Lab Tests" >
						<field name="lab_test_ids" colspan="4" nolabel="1">
							<!-- <tree string="Lab Tests" >
								<field name="name" required="1"/>
								<field name="doctor_id"/>
								<field name="date"/>
								<field name="state"/>
							</tree>
							<form string="Lab Tests">
								<field name="name"/>
								<field name="doctor_id"/>
								<field name="date"/>
								<field name="state"/>
							</form> -->
						</field>
					</page>
				</notebook>
			</field>
		</record>

		<!-- Lab test type -->
		<record model="ir.ui.view" id="medical_test_view">
			<field name="name">Lab test</field>
			<field name="model">medical.test_type</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Lab Test">
					<notebook>
						<page string="Main Info">
							<group colspan="4" col="4">
								<field name="name" required="1"></field>
								<field name="code"></field>
								<field name="critearea" colspan="4" nolabel="1">
									<tree string="Test Cases" colors="red:warning">
										<field name="sequence"/>
										<field name="warning"/>
										<field name="excluded"/>
										<field name="name"/>
										<field name="lower_limit"/>
										<field name="upper_limit"/>
										<field name="units"/>
										<field name="remark"/>
										<field name="result"/>
									</tree>
									<form string="Test Cases">
										<group colspan="4" col="4">
											<field name="sequence"/>
											<field name="name"/>
											<field name="warning" />
											<field name="excluded"/>
											<field name="lower_limit"/>
											<field name="upper_limit"/>
											<field name="units"/>
											<field name="result_text"/>
											<field name="result" on_change="onchange_result(lower_limit, upper_limit,result)"/>
											<field name="remark"/>
										</group>
									</form>
								</field>
								<field name="product_id"/>
							</group>
						</page>
						<page string="Extra Info">
							<field name="info"></field>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="medical_test_tree">
			<field name="name">Lab test types list</field>
			<field name="model">medical.test_type</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string='Lab test type'>
					<field name="name"></field>
					<field name="code"></field>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="medical_action_form_test">
			<field name="name">Type of Lab test</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.test_type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<record id="view_medical_lab_test_type_search" model="ir.ui.view">
			<field name="name">medical.test_type.select</field>
			<field name="model">medical.test_type</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Search Lab Test Types">

					<separator orientation="vertical"/>
					<field name="name" select="1"/>
					<field name="code" select="1"/>
					<newline/>

				</search>
			</field>
		</record>
		<menuitem action="medical_action_form_test" id="medical_conf_test" parent="medical_conf_menu" />
		<record model="ir.ui.view" id="medical_lab_view">
			<field name="name">Lab Test</field>
			<field name="model">medical.lab</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Laboratory Test">
					<notebook>
						<page string="Main Info">
							<group colspan="4" col="4">
								<field name="name" required="1"></field>
								<field name="test" required="1"></field>
								<field name="date_analysis"></field>
								<newline/>
								<field name="patient" required="1"></field>
								<field name="pathologist"></field>
								<newline/>
								<field name="date_requested"></field>
								<field name="requestor" required="1"></field>
							</group>
							<field name="critearea" colspan="4" nolabel="1">
								<tree string="Test Cases" colors="red:warning">
									<field name="sequence"/>
									<field name="warning"/>
									<field name="excluded"/>
									<field name="name"/>
									<field name="lower_limit"/>
									<field name="upper_limit"/>
									<field name="units"/>
									<field name="remark"/>
									<field name="result"/>
								</tree>
								<form string="Test Cases">
									<group colspan="4" col="4">
										<field name="sequence"/>
										<field name="name"/>
										<field name="warning" />
										<field name="excluded"/>
										<field name="lower_limit"/>
										<field name="upper_limit"/>
										<field name="units"/>
										<field name="result" on_change="onchange_result(lower_limit, upper_limit,result)"/>
										<field name="remark"/>
									</group>
								</form>
							</field>

						</page>
						<page string="Extra Info">
							<group colspan="4" col="4">
								<field name="results"></field>
								<newline/>
								<field name="diagnosis"></field>
							</group>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="medical_lab_tree">
			<field name="name">Lab test type</field>
			<field name="model">medical.lab</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string='Lab test type'>
					<field name="name"></field>
					<field name="test"></field>
					<field name="patient"></field>
					<field name="date_analysis"></field>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="medical_action_tree_lab">
			<field name="name">Lab Tests Results</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.lab</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="medical_lab_tree"/>
		</record>
		<menuitem action="medical_action_tree_lab" id="medical_action_lab_tree" parent="medical_laboratory_menu" sequence="2"/>
		<act_window domain="[('patient', '=', active_id)]" id="act_patient_lab_history" name="Lab Reports" res_model="medical.lab" src_model="medical.patient"/>
		<record id="view_medical_lab_test_results_filter" model="ir.ui.view">
			<field name="name">Lab Tests Results</field>
			<field name="model">medical.lab</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Search Lab Tests Results">

					<separator orientation="vertical"/>
					<field name="name" select="1"/>
					<field name="test" select="1"/>
					<field name="patient" select="1"/>
					<field name="date_analysis" select="1"/>
					<newline/>

				</search>
			</field>
		</record>
		
		<!-- Appointments -->

		<record id="view_medical_appointment" model="ir.ui.view">
			<field name="name">medical.lab.appointment.calendar</field>
			<field name="model">medical.lab.appointment</field>
			<field name="type">calendar</field>
			<field name="arch" type="xml">
				<calendar string="Appointments" color="doctor" date_start="appointment_sdate">
					<field name="patient"/>
					<field name="doctor"/>
				</calendar>
			</field>
		</record>

		<record model="ir.ui.view" id="medical_appointment_view">
			<field name="name">Appointment</field>
			<field name="model">medical.lab.appointment</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Appointment" version="7.0">
					<header>
						   <button name="requested" string="Requested" type="object" states="draft"/>
						   <button name="create_invoices" string="Create Invoice" type="object" attrs="{'invisible': ['|','|',('inv_id', '!=', False),('state', '!=', 'requested'),('no_invoice', '=', True)]}"/>
                           <button name="outcome" string="Outcome" type="object" states="requested"/>                         
                           <button name="cancel" string="Cancel" type="object" states="draft,requested"/>                         
				           <field name="state" widget="statusbar" statusbar_visible="draft,requested,outcome"/>
            		 </header>
                    <sheet>
                    <group>
					<group colspan="4" col="4">
						<field name="name"/>
						<field name="institution" domain="[('is_institution','=',1)]" context="{'default_is_institution': 1, 'search_default_is_institution': 1}"/>
						<field name="patient" />
						<field name="urgency"/>
						<field name="request_date" />
						<field name="doctor"  />
						<field name="appointment_sdate" />
						<field name="appointment_edate" />
						<field name="pricelist_id"  />
						
						<field name="no_invoice" />
						<field name="inv_id" />
						
					</group>
					 <separator colspan="4" string="Information"/>
					 <notebook>
					 	<page string="Lab Test">
							 <field colspan="4" nolabel="1" name="test_ids"/>
						 </page>
						 <page string="Lab Requests">
							 <field colspan="4" nolabel="1" name="lab_request"/>
						 </page>
						 <page string="Lab Result">
							 <field colspan="4" nolabel="1" name="lab_result"/>
						 </page>
						 <page string="Info">
							 <field colspan="4" nolabel="1" name="comments"/>
						 </page>
					</notebook> 
				</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="medical_appointment_tree">
			<field name="name">Appointments</field>
			<field name="model">medical.lab.appointment</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string='Appointment Information'>
					<field name="name"></field>
					<field name="patient"></field>
					<field name="urgency"></field>
					<field name="appointment_sdate"/>
					<field name="doctor"></field>
					<field name="institution"></field>
					<field name="state"></field>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="medical_action_form_appointment">
			<field name="name">Appointments</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.lab.appointment</field>
			<field name="view_type">form</field>
			<field name="view_mode">calendar,tree,form</field>
			<field name="view_id" ref="medical_appointment_tree"/>
		</record>

		<menuitem action="medical_action_form_appointment" id="medical_conf_appointment_add" parent="medical_appointment_menu" sequence="1"/>

		<record id="view_medical_appointment_filter" model="ir.ui.view">
			<field name="name">medical.lab.appointment.select</field>
			<field name="model">medical.lab.appointment</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Search Appointments">
					<filter icon="terp-personal" string="My appointments" domain="[('user_id','=',uid)]"/>
					<newline/>
					<separator orientation="vertical"/>
					    <field name="doctor" select="1"/>
					    <field name="patient" select="1"/>
					    <field name="appointment_sdate" select="1"/>
					<newline/>
					<group expand="1" string="Group By..." >
						<filter string="Doctor" icon="terp-personal" domain="[]" context="{'group_by':'doctor'}"/>
						<filter string="Date" icon="terp-go-month" domain="[]" context="{'group_by':'appointment_sdate'}"/>
					</group>
				</search>
			</field>
		</record>


	</data>
</openerp>