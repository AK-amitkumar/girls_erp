					<group colspan="4" col="4">
						<field name="request" readonly="1"/>
						<field name="name" required="1"/>
						<field name="date"/>
						<field name="patient_id" required="1"/>
						<field name="doctor_id"/>
						<field name="state"/>
						<field name="urgent"/>
					</group>
				</form>
			</field>
		</record>
