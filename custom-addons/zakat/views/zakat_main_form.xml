<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <!-- Tree Case Study view -->
        
        <record id="view_zakat_tree" model="ir.ui.view">
             <field name="name">Case Study</field>
             <field name="model">case.study.request</field>
             <field name="arch" type="xml">
                <tree string="Case Study" default_order="date desc">
                    <field name="date" widget="date"/>
                    <field name="family_head" />
                    <field name="fh_state"/>
                    <field name="case_state"/>
                </tree>
             </field>
         </record>

        <!-- Tree women opinion view -->

        <record id="view_women_opinion_tree" model="ir.ui.view">
             <field name="name">Women Commission Opinion</field>
             <field name="model">women.commission.opinion</field>
             <field name="arch" type="xml">
                <tree string="Women Commission Opinion" default_order="date desc">
                    <field name="opinion"/>
                    <field name="needs_type_id"/>
                    <field name="pocket_of_money"/>
                </tree>
             </field>
        </record>

        <!-- Final Opinion -->

        <record id="view_final_opinion_tree" model="ir.ui.view">
             <field name="name">Commission Final Report</field>
             <field name="model">final.opinion</field>
             <field name="arch" type="xml">
                <tree string="Commission Final Report" default_order="date desc">
                    <field name="opinion"/>
                    <field name="char_deputy_id"/>
                    <field name="char_deputy1_id"/>
                 </tree>
             </field>
        </record>

        
        <record id="women_commission_opinion" model="ir.ui.view">
             <field name="name">Women Commission Opinion</field>
             <field name="model">women.commission.opinion</field>
             <field name="arch" type="xml">
                <form string="Women Commission Opinion">
                    <group>
                        <field name="opinion"/>
                        <field name="needs_type_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                        <field name="pocket_of_money"/>
                        <!--<field name="partner_ids" widget="many2many_tags"/>-->
                    </group>
                </form>
            </field>
        </record>

        <!-- Branch Management Opinion -->

        <record id="branch_management_opinion" model="ir.ui.view">
             <field name="name">Branch Management Opinion</field>
             <field name="model">branch.management.opinion</field>
             <field name="arch" type="xml">
                <form string="Women Commission Opinion">
                    <group>
                        <field name="opinion" required="True"/>
                       <!-- <field name="partner_ids" widget="many2many_tags"/>-->
                    </group>
                </form>
            </field>
        </record>


        <!-- Family Loan -->
        
        <record id="family_loan_form_view" model="ir.ui.view">
             <field name="name">Family Loans</field>
             <field name="model">family.loan</field>
             <field name="arch" type="xml">
                <form string="Family Loans">
                    <group>
                        <field name="community_name"/>
                        <field name="loan_money"/>
                        <field name="monthly_installment"/>
                        <field name="image" widget="image"/>
                    </group>
                    <notebook>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- Final Opinion -->

        <record id="final_opinion_form_view" model="ir.ui.view">
             <field name="name">Final Opinion</field>
             <field name="model">final.opinion</field>
             <field name="arch" type="xml">
                <form string="Women Commission Opinion">
                    <group>
                        <field name="opinion" required="True"/>
                        <field name="char_deputy_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                        <field name="char_deputy1_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                     </group>
                </form>
            </field>
        </record>

        <!-- Documentation form view -->

        <record id="documentation_form_view" model="ir.ui.view">
             <field name="name">Documentation</field>
             <field name="model">documentation</field>
             <field name="arch" type="xml">
                <form string="المستندات">
                    <group>
                        <field name="name" required="True"/>
                        <field name="image" widget="image"/>
                    </group>
                </form>
            </field>
        </record>


        <!-- Family need tree view -->

        <record id="view_family_need_tree" model="ir.ui.view">
            <field name="name">Family Need</field>
            <field name="model">family.need</field>
            <field name="arch" type="xml">
                <tree string="Family Need" colors="red:colorize==True" default_order="date desc">
                    <field name="colorize" invisible="1"/>
                    <field name="need_type_id"/>
                    <field name="value"/>
                    <field name="dispatch_date_from"/>
                    <field name="dispatch_date_to"/>
                    <field name="approve"/>
                </tree>
             </field>
        </record>


        
        <record id="view_final_opinion_tree" model="ir.ui.view">
             <field name="name">Commission Final Report</field>
             <field name="model">final.opinion</field>
             <field name="arch" type="xml">
                <tree string="Commission Final Report" default_order="date desc">
                    <field name="opinion"/>
                    <field name="char_deputy_id"/>
                    <field name="char_deputy1_id"/>
                </tree>
             </field>
        </record>


        <!-- Search View -->

        <record id="zakat_view_search" model="ir.ui.view">
             <field name="name">zakat.view.search</field>
             <field name="model">case.study.request</field>
             <field name="arch" type="xml">
                <search string="Case Study">
                    <field name="date" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Date" domain="[]" context="{'group_by':'date'}" />
                        <filter string="State" name="filter_state" domain="[]" context="{'group_by':'case_state'}" />
                    </group>
                    
                 </search>
             </field>
        </record>


        <!-- family.need Form View -->
        
        <record id="family_need_view_form" model="ir.ui.view">
            <field name="name">family.need.form</field>
            <field name="model">family.need</field>
            <field name="arch" type="xml">
                <form string="Family Needs">
                    <sheet>
                        <header>
                            <button string="Confirm" type="object" name="confirm" attrs="{'invisible': [('is_admin', '!=', True)] }"/>
                        </header>
                        <group>
                            <field name="case_study_id" attrs="{'invisible': [('is_admin', '=', False)] }"/>
                            <field name="is_admin" invisible="1"/>
                            <field name="need_type_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="frequency_help" attrs="{'invisible': [('is_admin', '!=', True)] }"/>
                            <field name="selecting_date_from" attrs="{'invisible': [('is_admin', '!=', True)] }"/>
                            <field name="selecting_date_to" attrs="{'invisible': [('is_admin', '!=', True)] }"/>
                            <field name="dispatch_date_from" attrs="{'invisible': [('is_admin', '!=', True)] }"/>
                            <field name="dispatch_date_to" attrs="{'invisible': [('is_admin', '!=', True)] }"/>
                            <field name="value" attrs="{'invisible': [('is_admin', '!=', True)] }"/>
                            <field name="summery"/>
                            <field name="approve" attrs="{'invisible': [('is_admin', '!=', True)] }"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         <!-- family.need Form View -->
        
        <record id="family_member_view_form" model="ir.ui.view">
