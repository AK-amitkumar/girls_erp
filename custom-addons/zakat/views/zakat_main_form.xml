                                    </tree>
                                </field>
                            </page>
                            <page string="Branch Management Opinion" groups="zakat.group_departmental_user,zakat.group_social_survey,zakat.group_central_team,zakat.group_finial_decision_team" attrs="{'readonly': [('central_department', '=', 1)]}">
                                <field name="branch_management_opinion_ids" mode="tree" attrs="{'required': [('branch_management', '=', 1)]}">
