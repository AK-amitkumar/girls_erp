                                        <field name="birthday_date"/>
                                        <field name="educ_state" options="{'no_quick_create': True, 'no_create_edit' : True, 'no_open': True}"/>
                                        <field name="description"/>
                                        <field name="image" widget="image"/>
                                    </tree>
                                </field>
                            </page>

