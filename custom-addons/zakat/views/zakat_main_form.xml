        <!-- Case Study Form View -->

        <record id="case_study_view_form" model="ir.ui.view">
             <field name="name">case.study.form</field>
             <field name="model">case.study.request</field>
             <field name="arch" type="xml">
                 <form string="Case Study">
                    <header>
                        <button string="الانتقال للمرحلة التالية" type="object" name="approve" groups="zakat.group_registration_user,zakat.group_social_survey,zakat.group_central_team"/>
                        <button string="ارسال الى الباحث الاجتماعى" type="object" name="approve" groups="zakat.group_departmental_user"/>
                        <button string="ارسال الى ادارة النواقص" type="object" name="approve" groups="zakat.group_departmental_user"/>

                        <button string="الموافقة النهائية" type="object" name="approve" groups="zakat.group_finial_decision_team"/>

                        <button string="رفض الطلب" type="object" name="refuse" groups="zakat.group_finial_decision_team"/>

                        <button string="ارجاع للمسجل" type="object" name="refuse" groups="zakat.group_departmental_user"/>

                        <button string="الى الدائرة" type="object" name="refuse" groups="zakat.group_central_team"/>
                        
                        <button string="تأجيل الطلب" type="object" name="delay_request" groups="zakat.group_finial_decision_team"/>
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box cols-sm-12">
                        <h3 align="center">لوحة بيانات الأسرة</h3>
                        <button class="oe_inline oe_stat_button" type="object"
                            context="{'search_default_partner_id': active_id}" name="loans">
                            <h5 align="center">
                                <field string="Loans" name="display_number" widget="statinfo"/>
                            </h5>
                        </button>
                        <button class="oe_inline oe_stat_button" type="object"
                            context="{'search_default_partner_id': active_id}" name="loans">
                            <h5 align="center">
                                <field string="Lately Paid" name="lately_paid_total" widget="statinfo"/>
                            </h5>
                        </button>
                        <br />
                        <button class="oe_inline oe_stat_button" type="object"
                            context="{'search_default_partner_id': active_id}" name="loans">
                            <h5 align="center">
                                <field string="‫عدد الأفراد" name="total_number_family" widget="statinfo"/>
                            </h5>
                        </button>
                        <button class="oe_inline oe_stat_button" type="object"
                            context="{'search_default_partner_id': active_id}" name="loans">
                            <h5 align="center">
                                <field string="‫اجمالى الدخل" name="total_income" widget="statinfo"/>
                            </h5>
                        </button>
                        </div>
                        <br />
                        <h2 align="center">استمارة دراسة حالة</h2>
                        <div class="row">
                                <div class="col-sm-12">
                                    <br />
                                    <h4 align="right" style="color: red">يجب ادخال الحقول ذات الخلفية الزرقاء</h4>
                                </div>
                            </div>
                        <group col="12">
                            <div col="4">
                                <field name="check_user" invisible="1"/>
                                <field name="is_admin" invisible="1"/>
                                <field name="is_registration_user" invisible="1"/>
                                
                                <br/>
                                <label for="date" >AD Date</label>
                                <br/>
                                <field name="date" nolabel="1" widget="date"  attrs="{'readonly': [('check_user', '=', 1)]}"/>    
                            </div>
                            <div col="4">
                                <lable for="hijri_date">التاريخ الهجرى</lable>
                                <field name="hijri_date" nolabel="1" attrs="{'readonly': [('check_user', '=', 1)]}"/>
                                <field name="reject" invisible="1"/>
                            </div>
                        </group>
                        <group col="12">
